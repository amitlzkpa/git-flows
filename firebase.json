{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "firestore": {
      "host": "localhost",
      "port": "3000"
    },
    "functions": {
      "host": "localhost",
      "port": "4000"
    },
    "hosting": {
      "host": "localhost",
      "port": "5000"
    },
    "storage": {
      "port": "7000"
    },
    "database": {
      "port": "9000"
    },
    "ui": {
      "enabled": true
    }
  },
  "hosting": {
    "public": "./dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/test",
        "function": "test"
      },
      {
        "source": "/api/get-stats",
        "function": "getStats"
      },
      {
        "source": "/go**",
        "function": "go"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": "functions"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
