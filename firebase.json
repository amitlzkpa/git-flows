{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "./dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/test",
        "function": "test"
      },
      {
        "source": "/api/rapyd",
        "function": "rapyd"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
